{
    "name": "dev4traders/mt4-sdk-php",
    "description": "SDK for using the Metatrader4 API in PHP",
    "keywords": [
        "dev4traders",
        "mt4-sdk-php"
    ],
    "homepage": "https://github.com/dev4traders/mt4-sdk-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Mikhail",
            "email": "mikha.dev@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"

    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.0",
        "laravel/pint": "^1.2",
        "pestphp/pest": "^1.20",
        "pestphp/pest-plugin-mock": "^1.0",
        "phpstan/phpstan": "^1.9",
        "vlucas/phpdotenv": "^5.5"
    },
    "suggest": {
        "guzzlehttp/guzzle": "Make HTTP requests"
    },
    "autoload": {
        "psr-4": {
            "D4T\\MT4Sdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "D4T\\MT4Sdk\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "analyse": "vendor/bin/phpstan",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
